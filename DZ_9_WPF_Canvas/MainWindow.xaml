            x:Name="User"
            Fill="White"
            Width="20"
            Height="65"
            Canvas.Right="10"
            />
        <Ellipse
            x:Name="Ball"
            Fill="White"
            Width="30"
            Height="30" Canvas.Left="236" Canvas.Top="154"
            />
